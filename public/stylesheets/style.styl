/////////////////フッター・ユニゲーbar・・・・・・・・・・
footer
  width 100%
  position fixed
  bottom 0
  div#unigeBar
    div#statusBar
      position absolute
      bottom 0
      left 0
      z-index 99
      width 100%
      height 20px
      border-top 1ps solid w6
      box-shadow 0 -1px 0 b4
      background w2
      span.copyright
        color b4
        float right
        display inline-block
        margin 3px 8px
        font-size 10px
    div.unige-logo
      position absolute
      bottom 0
      z-index 10
      has1()
      rad(4)
      background b5
      border 1px solid b3
      width 130px
      height 86px
      margin -24px 4px
      padding 8px 0
      text-align center

    //トグルビュー
    .toggle-view
      position relative
      z-index 3
      height 300px
      background rgba(16,16,16,0.9)
      #toggleView
        overflow hidden
        .tag-cloud
          height 300px
          a.tag
            text-decoration none
            display inline-block
            font-size 16px
            margin 4px 8px
            background b6
            padding 4px 8px
            rad(2)
            &:hover
              background b6 + 20%
        .categories
          margin 0 auto
          width 960px
          height 300px
          a.item
            text-decoration none
            has1()
            margin 4px 15px
            text-align center
            display inline-block
            font-size 22px
            padding 17px 0
            width 290px
            background b2
    //情報bar
    div.info-bar
      position relative
      z-index 2
      hilite-top()
      border-top 1px solid b3
      background b4
      padding 2px 32px
      width auto
      div.info-bar-inner
        box-shadow -1px -1px 1px rgba(255,255,255,0.2) inset , -1px -1px 1px rgba(0,0,0,0.9)
        rad(2)
        margin 2px
        background b2
        height 22px
        width auto
        overflow hidden
        div#infoBar
          width 110%
          .info-message
            position relative


            color w3
            font-size 12px
    //メインバー
    div.main-bar
      padding 4px 0 24px 0
      position relative
      z-index 2
      hilite-top()
      border-top 1px solid b3
      background b4

      //ユーザメニュ
      div#userMenu
        border 1px solid b2
        has2()
        rad(2)
        position absolute
        z-index -1
        background b4
        left 14px
        width 110px
        bottom 140px
        a.item
          text-align center
          text-decoration none
          font-size 12px
          margin 0
          display inline-block
          padding 6px 0
          color w6
          width 100%
          hilite-bottom()
          border-bottom 1px solid b3
          &:hover
            background b5
          &.active
            background c2
      div.main-menu
          margin 2px
          margin-left 180px
          height auto
          width auto
          div.select-category-wrap
            display inline-block
            width auto
            div.select-category
              float right
              background b4
              height 47px
              margin -4px
          div.user-wrap
            float left
            div#userLabel
              rad(2)
              box-shadow -1px -1px 1px rgba(255,255,255,0.2) inset , -1px -1px 1px rgba(0,0,0,0.9)
              position relative
              background b3
              font-size 10px
              width 120px
              height 40px
              float left
              div.icon-wrap
                img.icon
                  float left
                  display inline-block
                  margin 4px 2px
                  padding 4px 2px
                  padding-right 4px
                  border-right 1px solid b5
                  width 24px
                  height 24px
              a.handle
                color w1
                display inline-block
                margin 10px 0px
                font-size 12px
              div.notices
                position absolute
                right 4px
                bottom 2px
                display inline-block
                color b6
                width 12px
            button#entryButton
              display inline-block
              margin 4px 8px
              background c2
              border 1px solid b2
              color w1
              font-weight normal
              padding 4px
              font-size 12px
              width 48px
              rad(4)
              box-shadow 0 0 2px b1 ,0 0 2px b1 , 1px 1px 0px c2 +20% inset , -1px -1px 0px c2 - 20% inset
              &:focus,
              &:active
                outline none
              &:hover
                background c2+20%
          div.search
            float right
            rad(2)
            margin 6px
            margin-right 8px
            padding 2px
            position relative
            background w3
            width 200px
            i
              color w6
              font-size 14px
              margin 4px
            input#search-unigame
              width 160px
              margin 0 4px
              font-size 12px
              background none
              border none
              &:focus
                outline none
              &:active
                outline none
          .seek-wrap
            width 250px
            float right

            a.button-b
              text-decoration none
              box-shadow 1px 0 0 b5 , 1px 0 0 b5 inset
              float right
              border-left 1px solid b3
              border-right 1px solid b3
              padding 10px
              font-size 14px
              margin 0 8px -6px 0px
              color c3
              text-shadow -1px -1px 0px b3
              font-weight bold
              border-top 3px solid c3
              &:hover
                background b5
              &.active
                background b6






