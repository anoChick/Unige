@import 'nib'
@import 'nib/gradients'

b1 = #000
b2 = #080808
b3 = #111
b4 = #222
b5 = #333
b6 = #444
w1 = #fff
w2 = #eee
w3 = #ddd
w4 = #bbb
w5 = #aaa
w6 = #888
c1 = #222
c2 = #3cc83c
c3 = #0094ff
c4 = #ff5030
c5 = #ffffbd
button
  &:active,
  &:focus
    outline none
.cnt-inr
  overflow scroll
.cnt-inr-x
  overflow-x scroll

.cnt-inr-y
  overflow-y scroll
.con-wrp
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.loading
  position absolute
  right 0
  margin 4px
  i
    color w6
.hide
  display none

ana()
  box-shadow -1px -1px 1px rgba(255,255,255,0.2) inset , -1px -1px 1px rgba(0,0,0,0.9)
shadow1()
  box-shadow 2px 2px 2px rgba(0,0,0,0.5)
rad(r)
  border-radius unit(r,'px')
has2()
  box-shadow 0 0 2px rgba(255,255,255,0.2) inset ,2px 2px 2px rgba(0,0,0,0.5)
has1()
  box-shadow 0 0 2px rgba(255,255,255,0.2) inset ,2px 2px 2px rgba(0,0,0,0.5)
hilite()
  box-shadow 0 0 2px rgba(255,255,255,0.2) inset
hilite-top()
  box-shadow 0 1px 0px rgba(255,255,255,0.1) inset
hilite-bottom()
  box-shadow 0 -1px 0px rgba(255,255,255,0.1) inset
grad(color1 , color2)
  linear-gradient(top, color1, color2)



.container
  color w1
  // background b3
  has2()
.wc
  margin 4px
  background w1
  border 1px solid w5
  has1()
.clearfix
  &:after
    content ""
    clear both
    display block
body,html
  font-size 14px
  width 100%
  height 100%
  background c8
  background-image url('../images/stardust.png')
  -webkit-font-smoothing: antialiased;

a
  color: #00B7FF




