        a(class='item' href='/cat/race') レース
        a(class='item' href='/cat/shooter') シューティング
        a(class='item' href='/cat/sport') スポーツ
        a(class='item' href='/cat/puzzle') パズル
        a(class='item' href='/cat/table') テーブル
        a(class='item' href='/cat/quiz') クイズ
